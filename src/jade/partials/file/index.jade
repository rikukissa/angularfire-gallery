div(ng-repeat='item in files')
  a(target='_blank', ng-href='{{ item.file.link }}', ng-if='item.file.file_type === "image"')
    img.file-view.img-responsive(ng-src='{{ item.file.link }}')

  a(target='_blank', ng-href='{{ item.file.link }}', ng-if='item.file.file_type === "video"')
    div(youtube-embed='{{ item.file.video }}')

  .file-header
    h2
      img(gravatar-src='item.user.email', gravatar-size='36')
      |Â {{ item.user.username }}

    .btn-toolbar.file-tools(ng-show='auth.user.id == item.file.user_id')
      .btn-group
        button.btn.btn-danger(ng-click='delete()')
          span.glyphicon.glyphicon-remove-circle
          |  delete

    .clearfix
