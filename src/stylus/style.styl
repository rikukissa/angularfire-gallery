@import 'mixins'
@import '../../vendor/bootstrap/dist/css/bootstrap.css'
@import '../../public/css/bootstrap-additions.css'
@import '../../public/css/angular-motion.css'

@import url('http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700')

body, html
  margin 0
  font-family 'Open Sans', sans-serif
  -webkit-font-smoothing antialiased
  background #fafafa

.header
  height 60px
  background #5cb85c
  border-bottom 1px solid #47A447

  .header-section
    list-style none
    margin-bottom 0
    padding 0
    height 60px
    line-height 60px
    float left
    font-weight 600

  .header-section-right
    float right

  .header-button
    color #fff
    padding 0 20px
    float left
    cursor pointer
    user-select none
    &:hover
      background #47a447
      text-shadow 1px -1px 0px rgba(0, 0, 0, 0.1)

  .header-avatar
    margin-right 1em
    width 30px
    heigth 30px
    border-radius 18px

  .glyphicon
    font-size 1.2em
    margin-right 0.5em
    vertical-align -0.2em

.upload-icon
  font-size 1.5em

.file-view
  margin auto

.file-header
  padding 1em
  margin-top 1em
  h2
    font-size 2em
    margin-top 0
  img
    margin-right 0.2em

  h2
    float left

.file-thumbnails
  padding 0.5em


.file-thumbnail
  margin 0.5em

.file-tools
  vertical-align bottom
  float right

.upload-aside
  .aside-dialog
    .aside-header
      .close
        font-size 1.4em
        margin-top 0.5em

.modal-backdrop.animation-fade
  opacity .5
  transition opacity .15s linear
  &.ng-enter
    opacity 0
    &.ng-enter-active
      opacity .5
  &.ng-leave
    opacity .5
    &.ng-leave-active
      opacity 0
.youtube-embed
  margin auto
  width 100%
  display block
