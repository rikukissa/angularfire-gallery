div(header)
div(sidebar)

.content.content-profile
  h2(ng-show='profile.$name == user.$name') Favourites
  h2(ng-hide='profile.$name == user.$name') {{ profile.username }}'s favourites
  .file-thumbnails
    a(ng-href='#/files/{{ file.$name }}', ng-repeat='file in files')
      img.file-thumbnail.img-thumbnail(ng-src='{{ file.thumbnail }}')
