{
    "rules": {
        ".read": false,
        ".write": false,
        "users": {
          ".read": true,
          ".write": "!data.exists()",
          "$userId": {
            ".write": "auth != null && auth.id == $userId",
            ".validate": "auth.id == $userId"
          }
        },
        "files": {
          ".write": "auth != null && !data.exists()",
          ".read": true,
          "$fileId": {
            ".write": "auth != null && (!data.exists() || auth.id == data.child('user_id').val())",
            ".validate": "newData.hasChildren(['user_id']) && auth.id == newData.child('user_id').val()"
          }
        }
    }
}
